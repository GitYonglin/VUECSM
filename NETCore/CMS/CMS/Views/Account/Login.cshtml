@model CMS.Model.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>登陆</title>
</head>
<body>
    <form asp-controller="Account" asp-action="Login" method="post">
        <table>
            <tr>
                <td>@ViewBag.ErrMsg</td>
            </tr>
            <tr>
                <td>UserName</td>
                <td>
                    <input asp-for="UserName" />
                </td>   
            </tr>
            <tr>
                <td>Password</td>
                <td>
                    <input asp-for="Password" />
                </td>
            </tr>
            <tr>
                <td>登陆</td>
                <td>
                    <button type="submit">登陆</button>
                </td>
            </tr>
        </table>
    </form>
</body>
</html>